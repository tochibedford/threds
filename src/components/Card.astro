---
export interface Props {
  title: string;
  image: string;
  text: string;
  flipped?: boolean;
}
const { flipped, image, text, title } = Astro.props;
---

<div class="container">
  {
    flipped !== true ? (
      <>
        <div class="left">
          <img src={image} />
        </div>
        <div class="right">
          <article>
            <h1>{title}</h1>
            <p>{text}</p>
          </article>
        </div>
      </>
    ) : (
      <>
        <div class="right">
          <article>
            <h1>{title}</h1>
            <p>{text}</p>
          </article>
        </div>
        <div class="left">
          <img src={image} />
        </div>
      </>
    )
  }
</div>

<style lang="scss" scoped>
  .container {
    display: grid;
    grid-template-columns: 1fr 1fr;

    .left {
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .right {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;

      article {
        width: 70%;
        text-align: justify;
        font-weight: 275;
        line-height: 38px;
        p {
          font-size: 1.4em;
        }
        h1 {
          font-size: 2.2em;
          font-weight: bold;
          text-align: left;
        }
      }
    }
  }
</style>
